<md-content layout="column" layout-align="start center">
  <div class="title-container">
    <img src="images/logo_color.png" />
  </div>
  <div class="sticky">
    <md-toolbar layout="row" layout-align="center">
      <div class="logo">
        <img src="images/logo_mini.png" hide-xs hide-sm hide-md />
        <img src="images/icon_mini.png" hide-xs hide-sm hide-gt-md/>
      </div>
      <div class="toolbar-root" layout="row">
        <em-nav-button flex view="$ctrl.views.ABOUT">
          About
        </em-nav-button>
        <em-nav-button flex view="$ctrl.views.SCHEDULE">
          Schedule
        </em-nav-button>
        <div flex>
          Blog
        </div>
      </div>
    </md-toolbar>
  </div>
  <div class="view-root">
    <div ng-view flex></div>
  </div>
</md-content>
